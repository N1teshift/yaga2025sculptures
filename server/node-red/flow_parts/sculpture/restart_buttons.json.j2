{
    "id": "restart_player_state_{{ sculpture_id }}",
    "type": "function",
    "z": "sculpture_dashboard",
    "name": "Update Player Button State {{ sculpture_id }}",
    "func": "msg.mode = msg.payload;\nreturn msg;",
    "outputs": 1,
    "noerr": 0,
    "x": 580,
    "y": 860,
    "wires": [["sculpture{{ sculpture_id }}_restart_player_reactive", "sculpture{{ sculpture_id }}_restart_player_reactive_tab"]]
},
{
    "id": "restart_all_state_{{ sculpture_id }}",
    "type": "function",
    "z": "sculpture_dashboard",
    "name": "Update Restart All Button State {{ sculpture_id }}",
    "func": "msg.mode = msg.payload;\nreturn msg;",
    "outputs": 1,
    "noerr": 0,
    "x": 760,
    "y": 860,
    "wires": [["sculpture{{ sculpture_id }}_restart_all_reactive", "sculpture{{ sculpture_id }}_restart_all_reactive_tab"]]
}{% if not loop.last %},{% endif %}
{% endfor %} 