{% for sculpture_id in [1, 2, 3] %}
{
    "id": "sculpture{{ sculpture_id }}_restart_darkice_reactive_tab",
    "type": "ui_template",
    "z": "sculpture_dashboard",
    "group": "ui_group_sculpture{{ sculpture_id }}_tab",
    "name": "Reactive Darkice Restart {{ sculpture_id }} (Tab)",
    "order": 11,
    "width": 0,
    "height": 0,
    "format": "{% raw %}<md-button class=\"md-raised\" ng-style=\"{ 'background-color': msg.mode === 'live' ? '#ff9f43' : '#cccccc', 'color': msg.mode === 'live' ? 'white' : '#666666', 'opacity': msg.mode === 'live' ? 1.0 : 0.5 }\" ng-disabled=\"msg.mode === 'local'\" ng-click=\"send({topic: 'sculpture/{{ sculpture_id }}/cmd', payload: {restart: 'darkice'}})\"><i class=\"fa fa-refresh\"></i> Restart Darkice</md-button>{% endraw %}",
    "storeOutMessages": true,
    "fwdInMessages": false,
    "resendOnRefresh": false,
    "templateScope": "local",
    "x": 480,
    "y": 740,
    "wires": [["mqtt_out_{{ sculpture_id }}"]]
},
{
    "id": "sculpture{{ sculpture_id }}_restart_player_reactive_tab",
