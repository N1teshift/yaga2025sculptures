[Unit]
Description=Sculpture Live Audio Player
After=network-online.target sound.target
Wants=network-online.target
Requires=sound.target

[Service]
Type=simple
ExecStart=/usr/bin/mpv --no-video --audio-device={% if audio_backend == 'pulse' %}{{ mpv_audio_device }}{% else %}alsa/hw:CARD=IQaudIOCODEC,DEV=0{% endif %} --audio-samplerate={{ audio_sample_rate }} --audio-format={{ mpv_audio_format }} --cache=yes --cache-secs={{ mpv_cache_secs }} --demuxer-max-bytes={{ mpv_demuxer_max_bytes }} --audio-buffer={{ mpv_audio_buffer_secs }} --msg-level=all=v --log-file=/tmp/mpv-live-{{ id }}.log --input-ipc-server=/tmp/mpvsocket-{{ id }} http://{{ control_host }}:8000/mix-for-{{ id }}.ogg
Restart=always
RestartSec=5
User=pi
Group=audio
Nice=-10

# Environment variables
Environment="XDG_RUNTIME_DIR=/run/user/1000"
Environment=SCULPTURE_ID={{ id }}
Environment=CONTROL_HOST={{ control_host }}

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target 